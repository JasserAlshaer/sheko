<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".addOrEditEmployeeIinfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/employeeImagePreview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/employee"
            app:civ_border_width="2dp"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="#FF000000"/>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/uploadProfileImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#130400"
            android:text="Upload Image"
            android:onClick="SelectImageForDeliveryMan"
            android:layout_gravity="center"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false"
            android:textStyle="bold|italic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:text=" Name :"
            android:textStyle="bold"
            android:textSize="9pt"
            android:fontFamily="@font/text3"
            android:textColor="#130400" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/employeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textColor="#130400"
            app:bootstrapBrand="info"
            app:bootstrapSize="lg"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="9pt"
            android:textStyle="bold"
            android:fontFamily="@font/text3"
            android:textColor="#130400"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/employeeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textColor="#130400"
            app:bootstrapBrand="info"
            app:bootstrapSize="lg"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="9pt"
            android:textStyle="bold"
            android:fontFamily="@font/text3"
            android:textColor="#130400"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/employeePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textColor="#130400"
            app:bootstrapBrand="info"
            app:bootstrapSize="lg"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="9pt"
            android:textStyle="bold"
            android:fontFamily="@font/text3"
            android:textColor="#130400"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/employeePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textColor="#130400"
            app:bootstrapBrand="info"
            app:bootstrapSize="lg"
            />
    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/continueRegistrationButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:backgroundTint="#130400"
        android:text="CONTINUE"
        android:textStyle="bold|italic"
        app:bootstrapSize="xl"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />
</LinearLayout>