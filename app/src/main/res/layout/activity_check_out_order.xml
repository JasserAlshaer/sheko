<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CheckOutOrder">
    <TextView
        android:id="@+id/tilteOrderName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Items"
        android:textSize="9pt"
        android:textAlignment="center"
        android:textColor="#ff6827"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/itemsNameLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textSize="9pt"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/itemsquantityLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="9pt"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ListView
        android:id="@+id/orederDetailsListView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="7dp"/>
    <Button
        android:id="@+id/buttonAssignButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Out Order"/>
</LinearLayout>