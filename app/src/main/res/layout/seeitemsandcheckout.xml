<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/menuMoreIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10sp"
        android:onClick="onCheckOutDoneClicked"
        android:src="@drawable/ic_baseline_cloud_done_24"/>
    <TextView
        android:id="@+id/mainActionBarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="See Items"
        android:fontFamily="@font/mnmn"
        android:textSize="26sp"
        android:textColor="#ff6827"
        android:textStyle="bold" />
</LinearLayout>